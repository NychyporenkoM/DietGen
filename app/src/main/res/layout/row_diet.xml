<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="5">

    <TextView
        android:id="@+id/row_diet_tv_diet_name"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:textSize="30sp"
        android:contextClickable="false"
        android:clickable="false"
        android:layout_gravity="center_vertical"
        android:layout_margin="@dimen/low_spacing"
        android:layout_weight="1"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:src="@drawable/user"
        android:contentDescription="@string/name"
        android:layout_margin="@dimen/low_spacing"
        android:layout_weight="1"/>

    <TextView
        android:id="@+id/row_diet_tv_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:textSize="12sp"
        android:layout_margin="@dimen/low_spacing"
        android:layout_weight="1"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:src="@drawable/daily_calories"
        android:contentDescription="@string/daily_calories"
        android:layout_margin="@dimen/low_spacing"
        android:layout_weight="1"/>

    <TextView
        android:id="@+id/row_diet_tv_daily_calories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:textSize="12sp"
        android:layout_margin="@dimen/low_spacing"
        android:layout_weight="1"/>

</LinearLayout>